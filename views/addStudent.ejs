<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Add Student</h2>
            <form method="POST" action="/students/add">
                <fieldset>
                    <legend>Personal Information</legend>
                    <div class="form-group">
                        <label for="studentNum">Student Number:</label>
                        <input class="form-control" id="studentNum" name="studentNum" type="text" required>
                    </div>
                    <div class="form-group">
                        <label for="firstName">First Name:</label>
                        <input class="form-control" id="firstName" name="firstName" type="text" required>
                    </div>
                    <div class="form-group">
                        <label for="lastName">Last Name:</label>
                        <input class="form-control" id="lastName" name="lastName" type="text" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input class="form-control" id="email" name="email" type="email" required>
                    </div>
                </fieldset>
                <fieldset>
                    <legend>Academic Information</legend>
                    <div class="form-group">
                        <label for="course">Course:</label>
                        <select class="form-control" id="course" name="course">
                            <option value="1">Relational Database Design</option>
                            <option value="2">Java Programming</option>
                            <option value="3">Cloud Computing</option>
                            <option value="4">Database Administration</option>
                        </select>
                    </div>
                </fieldset>
                <button class="btn btn-primary btn-block mt-3" type="submit">Add Student</button>
            </form>
        </div>
    </div>
</div>