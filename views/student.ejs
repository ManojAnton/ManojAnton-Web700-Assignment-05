<%- include('layouts/main') %>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Update Student</h2>

            <form method="POST" action="/student/update">
                <input type="hidden" name="studentNum" value="<%= student.studentNum %>" />

                <div class="form-group">
                    <label>First Name:</label>
                    <input class="form-control" name="firstName" type="text" value="<%= student.firstName %>" required>
                </div>
                <div class="form-group">
                    <label>Last Name:</label>
                    <input class="form-control" name="lastName" type="text" value="<%= student.lastName %>" required>
                </div>
                <div class="form-group">
                    <label>Email:</label>
                    <input class="form-control" name="email" type="email" value="<%= student.email %>" required>
                </div>
                <div class="form-group">
                    <label>Course:</label>
                    <select class="form-control" name="course">
                        <option value="1" <% if(student.course == 1) { %> selected <% } %>>Relational Database Design</option>
                        <option value="2" <% if(student.course == 2) { %> selected <% } %>>Java Programming</option>
                        <option value="3" <% if(student.course == 3) { %> selected <% } %>>Cloud Computing</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary btn-block mt-3">Update Student</button>
            </form>
        </div>
    </div>
</div>
