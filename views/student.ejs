<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Update Student</h2>

            <form method="POST" action="/student/update">
                <input type="hidden" name="studentNum" value="12345" />

                <div class="form-group">
                    <label>First Name:</label>
                    <input class="form-control" name="firstName" type="text" value="John" required>
                </div>
                <div class="form-group">
                    <label>Last Name:</label>
                    <input class="form-control" name="lastName" type="text" value="Doe" required>
                </div>
                <div class="form-group">
                    <label>Email:</label>
                    <input class="form-control" name="email" type="email" value="john.doe@example.com" required>
                </div>
                <div class="form-group">
                    <label>Course:</label>
                    <select class="form-control" name="course">
                        <option value="1" selected>Relational Database Design</option>
                        <option value="2">Java Programming</option>
                        <option value="3">Cloud Computing</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary btn-block mt-3">Update Student</button>
            </form>
        </div>
    </div>
</div>