<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <% if (typeof student !== 'undefined' && student) { %>
                <h2 class="text-center mb-4">Update Student</h2>
                <form method="POST" action="/student/update">
                    <input type="hidden" name="studentNum" value="<%= student.studentNum %>" />
                    <div class="form-group">
                        <label for="firstName">First Name:</label>
                        <input class="form-control" id="firstName" name="firstName" type="text" value="<%= student.firstName %>" required>
                    </div>
                    <div class="form-group">
                        <label for="lastName">Last Name:</label>
                        <input class="form-control" id="lastName" name="lastName" type="text" value="<%= student.lastName %>" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input class="form-control" id="email" name="email" type="email" value="<%= student.email %>" required>
                    </div>
                    <div class="form-group">
                        <label for="course">Course:</label>
                        <select class="form-control" id="course" name="course">
                            <option value="1" <%= student.course == 1 ? 'selected' : '' %>>Relational Database Design</option>
                            <option value="2" <%= student.course == 2 ? 'selected' : '' %>>Java Programming</option>
                            <option value="3" <%= student.course == 3 ? 'selected' : '' %>>Cloud Computing</option>
                            <option value="4" <%= student.course == 4 ? 'selected' : '' %>>Database Administration</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block mt-3">Update Student</button>
                </form>
            <% } else { %>
                <div class="alert alert-warning text-center" role="alert">
                    <%= message || 'Student not found.' %>
                </div>
            <% } %>
        </div>
    </div>
</div>